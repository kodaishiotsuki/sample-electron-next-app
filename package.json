{
  "name": "zenmetry-app",
  "version": "1.0.0",
  "description": "Hello World!",
  "main": "main/index.js",
  "productName": "Zenmetry",
  "author": "Jane Doe",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist main renderer/out renderer/.next",
    "dev": "npm run build-electron && electron .",
    "dev:dev": "env-cmd -f .env.development npm run dev",
    "dev:staging": "env-cmd -f .env.staging npm run dev",
    "build-renderer": "next build renderer",
    "build-electron": "tsc -p electron",
    "build": "npm run build-renderer && npm run build-electron",
    "build:dev": "env-cmd -f .env.development npm run build",
    "build:staging": "env-cmd -f .env.staging npm run build",
    "pack-app": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "type-check": "tsc -p ./renderer/tsconfig.json && tsc -p ./electron/tsconfig.json",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "autoprefixer": "^10.4.15",
    "classnames": "^2.3.2",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "electron-is-dev": "^1.1.0",
    "electron-next": "^3.1.5",
    "electron-squirrel-startup": "^1.0.0",
    "emoji-js": "^3.7.0",
    "encoding": "^0.1.13",
    "env-cmd": "^10.1.0",
    "eslint-config-next": "^13.4.19",
    "firebase": "^10.3.1",
    "firebase-admin": "^11.10.1",
    "html-react-parser": "^4.2.2",
    "next-themes": "^0.2.1",
    "postcss": "^8.4.29",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.46.2",
    "sanitize-html": "^2.11.0",
    "swr": "^2.2.2",
    "tailwindcss": "^3.3.3"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.4.2",
    "@electron-forge/maker-deb": "^6.4.2",
    "@electron-forge/maker-rpm": "^6.4.2",
    "@electron-forge/maker-squirrel": "^6.4.2",
    "@electron-forge/maker-zip": "^6.4.2",
    "@electron-forge/plugin-auto-unpack-natives": "^6.4.2",
    "@types/babel__traverse": "^7.20.1",
    "@types/node": "^14.14.6",
    "@types/react": "^16.9.9",
    "@types/react-dom": "^16.9.9",
    "@types/uglify-js": "^3.17.2",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "electron": "^24",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "next": "latest",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.4",
    "rimraf": "^3.0.0",
    "typescript": "^4.0.5"
  },
  "build": {
    "asar": true,
    "files": [
      "main",
      "renderer/out"
    ]
  }
}
